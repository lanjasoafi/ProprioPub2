{% extends 'base.html.twig' %}

{% block title %}Log in!{% endblock %}

{% block body %}
    <section class="" style="background-image: linear-gradient(#000000ab,#000000ab),url({{asset('assets/img/post-single-1.jpg')}}); height:100vh">
        <div class="container">
            <div class="row m-auto justify-content-center align-item-center vh-100">
                <div class="col-md-3"></div>
                <div class="col-md-6 border p-5 m-auto">
                    <form method="post">
                        {% if error %}
                            <div class="text-light alert bg-danger">Email ou mot de passe errone</div>
                        {% endif %}

                        {% if app.user %}
                            <div class="mb-3">
                                You are logged in as {{ app.user.userIdentifier }}, <a href="{{ path('app_logout') }}">Logout</a>
                            </div>
                        {% endif %}

                        <h1 class="mb-3 font-weight-normal text-center text-light">Se connecter</h1>
                        <label class="text-light" for="inputEmail">Email</label>
                        <input type="email" value="{{ last_username }}" name="email" id="inputEmail" class="form-control mb-3" autocomplete="email" required autofocus>
                        <label class="text-light" for="inputPassword">Mot de passe</label>
                        <input type="password" name="password" id="inputPassword" class="form-control mb-3" autocomplete="current-password" required>

                        <input type="hidden" name="_csrf_token"
                            value="{{ csrf_token('authenticate') }}"
                        >

                        <button class="btn btn-success w-100 mt-3" type="submit">
                            connexion
                        </button>
                        <button class="btn btn-warning w-100 mt-3 link-light">
                            <a class="link-light" href="{{path('app_home')}}">Annuler</a>
                        </button>
                        
                    </form>
                    <div class="mt-3">
                        <span class="text-light">Pas de compte</span>
                        <a class="link-primary  ms-3" href="{{path('app_register',{'_locale': app.request.locale})}}"> S' inscrire</a>
                    </div>
                </div>
                <div class="col-md-3"></div>
            </div>
        </div>
    </section>
{% endblock %}
