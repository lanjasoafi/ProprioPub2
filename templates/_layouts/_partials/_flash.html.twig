 {% for label, messages in app.flashes %}
    <div class="modal fade show" id="flashMessagesModal" tabindex="-1" aria-labelledby="flashMessagesModalLabel" aria-modal="true" role="dialog" style="display: block;">
        <div class="modal-dialog modal-dialog-centered">
            <div class="modal-content">
                <!-- Contenu du modal ici -->
               
                    {% for message in messages %}
                        <div class="modal-header bg-{{ label }} text-white">
                            <h5 class="modal-title" id="flashMessagesModalLabel">Alert</h5>
                            <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
                        </div>
                        <div class="modal-body">
                            <div class="alert alert-{{ label }}" role="alert">
                                <p class="mb-0">{{ message|raw }}</p>
                            </div>
                        </div>
                    {% endfor %}
               
            </div>
        </div>
    </div>

 {% endfor %}